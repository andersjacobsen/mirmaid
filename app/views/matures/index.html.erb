<div id="col-top"></div>    
<div id="col" class="box">

<h3>Listing matures</h3>

<% form_tag({:action => :index}, :method => :get) do %>
<div id="autocomplete"><%= render :partial=>"matures/search_pane" %></div>
<%= submit_tag 'Search' %>
<img id='search_spinner' src=<%= image_path("spinner.gif") %>  style='display:none;'/>
<% end %>
<br>  
<%= will_paginate @matures, :params => params %>

<table class="search">
  <tr><th>mature</th><th>sequence</th><th>evidence</th><th>experiment</th><tr>
  <%= render :partial => 'mature', :collection => @matures %>
</table>

</div> <!-- /col -->
<div id="col-bottom"></div>
